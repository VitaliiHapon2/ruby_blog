<%= render partial: "partials/nav_bar"%>


<div class="container">
<div class="row">
    <div class="col-md-10 col-lg-8">
        <div class="post-preview"><a href="#"></a>
            <div class="row">
                <div class="col">
                    <h2 class="post-title">Welcome</h2>
                </div>
            </div>
          
            <%= form_for :user do |f| %>
            <div class="row" style="margin-bottom: 4px;">
                <div class="col-4" style="color: rgb(118,118,118);"><span class="text-left">Username:&nbsp;</span></div>
                <div class="col-4">
                    <%= f.text_field :username, :style => "width:18em;", :class => "form-control", :required => "true"%>
                </div>
            </div>

            <div class="row" style="margin-bottom: 4px;">
                <div class="col-4" style="color: rgb(118,118,118);"><span class="text-left" style="margin-bottom: 0px;">Password:&nbsp;</span></div>
                <div class="col">
                <%= f.text_field :password, :style => "width:18em;", :class => "form-control", :required => "true", :type => "password"%>
                </div>
            </div>

            <div class="row" style="margin-bottom: 4px;">
                <div class="col-4" style="color: rgb(118,118,118);"><span class="text-left">Confirm password:&nbsp;</span></div>
                <div class="col">
                    <%= f.text_field :confirm, :style => "width:18em;", :class => "form-control", :required => "true", :type => "password"%>
                </div>
            </div>

            <% unless(session[:error_msg].nil?) %>
                <p class="text-danger text-center" >
                <%= session[:error_msg] %>
                <% session[:error_msg] = nil %>
                </p>
            <% end %>

            <div class="row" style="margin-bottom: 4px;">
                <div class="col-4 text-center"></div>
                <div class="col text-left align-self-center">
                    <%= f.submit "Sign up", :style => "width:18em;", :class => "btn btn-primary btn-sm" %>
                </div>
            </div>
            <% end %>

        </div>
        <hr>
    </div>
</div>
</div>