<div class="container-fluid" style="margin-left: 10px;margin-right: 10px;">
        <div class="row justify-content-start">
            <div class="col-8">
                <div class="border rounded-0" style="padding: 15px;">
                    <div class="post-preview">
                        <div class="row">
                            <div class="col">
                                <%= @comment.user.username %>    
                                <br></span>
                            </div>
                            <div class="row">
                            <% if( @post.user.id == session[:user_id]) %>
                   
                            
                       

                            <div class="col">
                            
                                <%= button_to 'Delete', delete_comment_path(@comment.id),
                                :class => "custom-btn btn btn-primary bg-secondary", :method => :delete %>                    
                            
                            </div> 
                            </div>  

                            <% end %>

                        </div>
                        <div class="row">
                            <div class="col-auto"><i class="fa fa-user" style="padding-top: -12px;font-size: 68px;"></i></div>
                            <div class="col-auto align-self-center">
                            <%= @comment.text %>  
                            </div>
                        </div>
                        <em>
                        Posted by 
                            <%= @comment.user.username %>
                            
                        ,
                        <%= @comment.created_at.strftime("%d.%m.%Y  \t %H:%M")%>
                     </em>
                     <br></p>
                     <p class="post-meta" style="margin-bottom: 8px;">
                     <em>
                        Edited, 
                        <%= @comment.updated_at.strftime("%d.%m.%Y  \t %H:%M")%>
                     </em><br></p>
                    </div>
                    <div class="post-preview"><a href="#"></a></div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    </div>