
<%= @comment.user.id %>
<div class="container-fluid" style="margin-left: 10px;margin-right: 10px;">
<div class="row justify-content-start">
    <div class="col-8">
        <div class="border rounded-0" style="padding: 15px;">
            <div class="post-preview">
                <div class="row">
                    <div class="col"><span>&lt;user_name&gt;:<br></span></div>
                    <div class="col-auto text-right align-self-center"><button class="btn btn-primary bg-secondary" type="button" style="padding-top: 6px;padding-right: 6px;padding-bottom: 6px;padding-left: 6px;margin-left: 10px;">Edit</button><button class="btn btn-primary bg-secondary" type="button"
                            style="padding-top: 6px;padding-right: 6px;padding-bottom: 6px;padding-left: 6px;margin-left: 10px;">Delete</button></div>
                </div>
                <div class="row">
                    <div class="col-auto"><i class="fa fa-user" style="padding-top: -12px;font-size: 68px;"></i></div>
                    <div class="col-auto align-self-center">
                        <p>&lt;comment text&gt;</p>
                    </div>
                </div>
                <p class="post-meta" style="margin-bottom: 8px;margin-top: 20px;"><em>Posted by &lt;author&gt; on &lt;date&gt;</em><br></p>
                <p class="post-meta" style="margin-bottom: 8px;"><em>Edited on &lt;date&gt;</em><br></p>
            </div>
            <div class="post-preview"><a href="#"></a></div>
            <div class="clearfix"></div>
        </div>
    </div>
</div>
</div>